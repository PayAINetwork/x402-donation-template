# ==============================================
# PUBLIC PROJECT METADATA (USED IN THE UI)
# ==============================================

NEXT_PUBLIC_PROJECT_NAME="Your Project Name"
NEXT_PUBLIC_PROJECT_DESCRIPTION="One sentence description for supporters"
NEXT_PUBLIC_PROJECT_IMAGE_URL=https://your-image-url.com/logo.png

# Optional fundraising goal in USD (displays progress toward target)
NEXT_PUBLIC_DONATION_TARGET=5000

# Wallet shown to donors in the UI (keep in sync with RESOURCE_SERVER_WALLET_ADDRESS)
NEXT_PUBLIC_DONATION_WALLET=YourSolanaAddressHere

# ==============================================
# DONATION TOKEN CONFIGURATION (OPTIONAL)
# ==============================================
# Configure the token used for donations (defaults to USDC)

# NEXT_PUBLIC_TOKEN_ADDRESS=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
# NEXT_PUBLIC_TOKEN_SYMBOL=USDC
# NEXT_PUBLIC_TOKEN_NAME=USD Coin
# NEXT_PUBLIC_TOKEN_DECIMALS=6

# ==============================================
# SOLANA + PAYMENT FACILITATOR SETTINGS
# ==============================================

# Mainnet: "solana" â€” Dev preview: "solana-devnet"
NEXT_PUBLIC_SOLANA_NETWORK=solana-devnet

# Optional RPC override (leave commented to use default)
# NEXT_PUBLIC_SOLANA_RPC_URL=https://rpc.helius.xyz/?api-key=your-key

# Commitment level used by Solana clients in the app
SOLANA_COMMITMENT=confirmed

# PayAI facilitator URL that x402 middleware talks to
FACILITATOR_URL=https://facilitator.payai.network

# ==============================================
# RESOURCE / DONATION WALLET (SERVER SIDE)
# ==============================================
# The middleware sends every USDC payment to this address. It MUST match
# NEXT_PUBLIC_DONATION_WALLET so donors see the same destination.
# If you generated a wallet during deploy, these are filled in automatically.

RESOURCE_SERVER_WALLET_ADDRESS=YourResourceWalletAddressHere
# RESOURCE_SERVER_WALLET_PRIVATE_KEY=YourResourceWalletPrivateKeyHere

# ==============================================
# DATABASE (DRIZZLE + API ROUTES)
# ==============================================
# When you provision Vercel Postgres or Neon, these URLs are injected. If you
# run locally, copy the connection string from your database provider.

STORAGE_URL=postgresql://user:password@host/database?sslmode=require
# STORAGE_URL_NON_POOLING=postgresql://user:password@host/database?sslmode=require
# DATABASE_URL=postgresql://user:password@host/database?sslmode=require
