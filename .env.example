# ==============================================
# TOKEN CONFIGURATION
# ==============================================
# These are auto-filled by the launcher when you deploy

# Server-side Token Configuration
TOKEN_NAME="Your Token Name"
TOKEN_SYMBOL=SYMBOL
TOKEN_MINT=YourTokenMintAddressHere
TOKEN_IMAGE_URL=https://your-image-url.com/token.png
TOKEN_DESCRIPTION="Your token description"
TOTAL_SUPPLY=1000000000
MINTABLE_SUPPLY=1000000000
DONATION_TARGET=1000
DOLLAR_TO_TOKEN_RATIO=1000000

# Frontend Token Configuration (NEXT_PUBLIC_ prefix for client-side access)
NEXT_PUBLIC_TOKEN_NAME="Your Token Name"
NEXT_PUBLIC_TOKEN_SYMBOL=SYMBOL
NEXT_PUBLIC_TOKEN_MINT=YourTokenMintAddressHere
NEXT_PUBLIC_TOKEN_IMAGE_URL=https://your-image-url.com/token.png
NEXT_PUBLIC_TOKEN_DESCRIPTION="Your token description"
NEXT_PUBLIC_MINTABLE_SUPPLY=1000000000
NEXT_PUBLIC_DONATION_TARGET=1000

# ==============================================
# SOLANA NETWORK CONFIGURATION
# ==============================================

NEXT_PUBLIC_SOLANA_NETWORK=solana-devnet
FACILITATOR_URL=https://facilitator.payai.network

# ==============================================
# RESOURCE WALLET CONFIGURATION
# ==============================================
# Auto-generated by launcher (if you chose auto-generate option)
# ⚠️ NEVER share your private key!

RESOURCE_SERVER_WALLET_ADDRESS=YourResourceWalletAddressHere
RESOURCE_SERVER_WALLET_PRIVATE_KEY=YourResourceWalletPrivateKeyHere

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Auto-injected by Vercel when you create a Postgres database
# You don't need to manually set this when deploying via the launcher

POSTGRES_URL=postgresql://user:password@host/database?sslmode=require
