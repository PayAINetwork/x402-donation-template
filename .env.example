# Token Configuration (Set by launcher during deployment)
TOKEN_MINT=<token_mint_address>
TOKEN_NAME=<token_name>
TOKEN_SYMBOL=<token_symbol>
TOTAL_SUPPLY=<total_supply>
MINTABLE_SUPPLY=<mintable_supply>
TOKEN_IMAGE_URL=<token_image_url>
TOKEN_DESCRIPTION=<token_description>

# Donation to Token Ratio
# How many tokens per $1 donated (e.g., 1000 = 1000 tokens per $1)
DOLLAR_TO_TOKEN_RATIO=1000

# Resource Server Wallet (holds mintable tokens)
RESOURCE_SERVER_WALLET_ADDRESS=<resource_server_wallet_address>
RESOURCE_SERVER_WALLET_PRIVATE_KEY=<base58_private_key>

# Solana Network
# Set to 'solana-devnet' for testing, 'solana' for production
NEXT_PUBLIC_SOLANA_NETWORK=solana-devnet

# Solana RPC (optional - uses public endpoints by default)
# NEXT_PUBLIC_SOLANA_RPC_URL=https://rpc.helius.xyz/?api-key=your-key
SOLANA_COMMITMENT=confirmed

# PayAI Facilitator
FACILITATOR_URL=https://facilitator.payai.network

# Vercel Postgres (auto-configured by Vercel when you add Postgres storage)
# These are automatically set by Vercel, no need to manually configure
# POSTGRES_URL=

# Next.js
NODE_ENV=development
